<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
                    http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="aliceController" class="hu.bme.mit.opencbdc_ssi_client.controllers.CitizenController">
        <constructor-arg index = "0" value="Alice"/>

    </bean>
    <bean id="bobController" class="hu.bme.mit.opencbdc_ssi_client.controllers.CitizenController">
        <constructor-arg index = "0" value="Bob"/>

    </bean>
    <bean id="aliceWebsocketClient" class="hu.bme.mit.opencbdc_ssi_client.aries.AriesSocketFactory">
        <constructor-arg index = "0" value="http://host.docker.internal:8001/ws"/>
        <constructor-arg index = "1" ref="aliceController"/>

    </bean>
    <bean id="aliceClient" class="hu.bme.mit.opencbdc_ssi_client.aries.AriesClientFactory">
        <constructor-arg value="http://host.docker.internal:8001"/>
    </bean>
    <bean id="bobWebsocketClient" class="hu.bme.mit.opencbdc_ssi_client.aries.AriesSocketFactory">
        <constructor-arg index = "0" value="http://host.docker.internal:8011/ws"/>
        <constructor-arg index = "1" ref="bobController"/>
    </bean>
    <bean id="bobClient" class="hu.bme.mit.opencbdc_ssi_client.aries.AriesClientFactory">
        <constructor-arg value="http://host.docker.internal:8011"/>
    </bean>
    <bean id="endpoint" class="hu.bme.mit.opencbdc_ssi_client.Endpoints"/>

</beans>